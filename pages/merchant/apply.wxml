<form bindsubmit="formSubmit" >
  <van-cell-group>
    <van-field
      value="{{ username }}"
      label="商家名称"
      placeholder="请输入商家名称"
      name="merchant_name"
    />

    <picker name="merchant_type" class="classpicker wbg" bindchange="classify" range-key="name" value="{{index}}" range="{{merchant_classify}}">
      <van-col span="5" custom-class="picker">
        行业分类：
      </van-col>
      <van-col span="18">{{merchant_classify[index].name}}</van-col>
    </picker>

      <van-field
        label="关键字"
        placeholder="请输入关键字"
        name="merchant_keyword"
      />
    
      <van-field
        name="merchant_city"
        value="{{ address }}"
        label="详细地址"
        placeholder="输入地址或点击图标选择"
        icon="location"
        bind:click-icon="onChangeAddress"
      />

    <!-- <view class='address wbg' bindtap='onChangeAddress'>
        点击选位置<van-icon name="location" />
      </view> -->
  </van-cell-group>

  <checkbox-group class="checkbox wbg" name="facility">
    <van-row>
      <label class="radio" wx:for="{{facility}}">
        <van-col span="8">
        <checkbox value="{{item.id}}" checked="{{item.checked}}" />
        {{item.name}}
        </van-col>
      </label>
    </van-row>
  </checkbox-group>

  <van-row cunstom-class="merchant_image">
    <van-row custom-class="upbox">
      <van-col span="5" offset="1" custom-class="uploadbtn">
        <van-button size="small" bind:click="upload_logo">上传logo</van-button>
      </van-col>
      <van-col span="18">
        <image  src="{{logo}}"  class="one_image" mode="widthFix" />
      </van-col>
    </van-row>
    <van-row custom-class="upbox">
      <van-col span="5" offset="1" custom-class="uploadbtn">
        <van-button size="small" bind:click="upload_wechat">上传微信</van-button>
      </van-col>
      <van-col span="18">
        <image  src="{{wechat}}" class="one_image" mode="widthFix" />
      </van-col>
    </van-row>

    <van-row custom-class="upbox">
      <van-col span="5" offset="1" custom-class="uploadbtn">
        <van-button size="small" bind:click="upload_detail">上传详情</van-button>
      </van-col>
      <van-col span="18">
        <image wx:for="{{merchant_detail_image}}"  src="{{item}}" class="one_image" mode="widthFix" />
      </van-col>
    </van-row>

        <van-row custom-class="upbox">
      <van-col span="5" offset="1" custom-class="uploadbtn">
        <van-button size="small" bind:click="upload_banner">上传轮播</van-button>
      </van-col>
      <van-col span="18">
        <image wx:for="{{merchant_banner_image}}"  src="{{item}}" class="one_image" mode="widthFix" />
      </van-col>
    </van-row>
  </van-row>
  
<textarea name="announcement" auto-height placeholder="商家介绍" />

<button type="primary" size="default" form-type="submit">
  提交
</button>
</form>