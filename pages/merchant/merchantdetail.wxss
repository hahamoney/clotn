/* pages/merchant/merchantdetail.wxss */
page{
  background-color: rgba(241, 241, 241, 0.705);
}
.wbg{
  background-color: #ffffff;
}
.van-row{
  text-align: center;
}
.image_font{
  width: 120rpx;
}
.news{
  padding: 20rpx 4%;
  margin: 0 0 12rpx 0;
}
.news .messageuser{
}
.news .messagetitle{
  color: #333333;
  font-size: 30rpx;
  line-height: 2;
  margin: 5rpx 0 10rpx;
  text-align: left;
}
.news .messagetitle .rate{
  font-size: 26rpx;
  color: #8e8ea7;
}
.news .messagetitle .rate .van-rate{
  float: left;
  margin: 2px 5px 0 0;
}
.news .content{
  line-height: 1.5;
  font-size: 30rpx;
  color: #444444;
  margin: 10px 0;
  padding: 10px 0;
  text-align: left;
  border-top: 1px solid #e6e6e6;
  border-bottom: 1px solid #e6e6e6;
}
.news .content .location{
  width: 70%;
  float: left;
  font-size: 26rpx;
  line-height: 1.5;
  color: #555555;
  overflow: hidden;
}
.news .content .location .van-icon{
  font-size: 32rpx;
  top: 5rpx;
  margin: 0 10rpx 0 0;
}
.news .content .phone{
  font-size: 30rpx;
  line-height: 1.5;
  color: #f56161;
  text-align: right;
}
.news .content .phone .van-icon{
  font-size: 32rpx;
  top: 5rpx;
  margin: 0 10rpx 0 0;
}
.news .content2{
  font-size: 28rpx;
  color: #555555;
  text-align: center;
}
.news .content2 .type{
  width: 30%;
  float: left;
  margin: 0 1% 5px;
}
.news .image{
  margin: 10rpx 0;
  text-align: left;
}
.news .image .image_font{
  width: 100%;
}
.countcell{
  font-size: 24rpx !important;
  color:#8e8ea7;
}
.countcell view{
  float: left;
  margin: 0 10rpx 0 0;
}
.countcell .van-icon{
  top: 3rpx;
  font-size: 30rpx;
}
.news3{
  font-size: 28rpx;
  text-align: left;
  color:#616166;
  line-height: 2.5;
  margin: 0 0 60px 0;
}
.news3 .title{
  padding: 10px 0;
}
.news3 .applybtn{
  margin: 20px 0 10px;
  width: 100%;
}
.comment{
  width: 80%;
}
.comment .commentbox{
  background-color: rgba(241, 241, 241, 0.705);
}
.comment .commentbox .title{
  background-color: rgba(241, 241, 241, 0.705);
}
.comment .commentbox .subbtn .van-button--normal{
  margin: 5px 0 0 0;
  width: 50%;
}
.comment .commentbox .contentbox .van-field__input{
  height: 150px;
}
