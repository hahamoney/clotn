<view class="header">
  <view class="header_card">
    <view class="headerimg">
      <image src="{{avatarUrl}}" mode="widthFix" />
    </view>
    <view class="username">
    <text bindtap='login'wx:if="{{username}}"> {{username}} </text>
    <button wx:else size='mini' open-type="getUserInfo"  bindgetuserinfo="bindGetUserInfo">请登陆</button>

    </view>

    <view class='clear'></view>
  </view>
</view>

<view class="container">
  <view class='containerbox'>
    <view class="box_header">
      <van-icon name="star" color='#ffd013' /><text > 我的服务 </text>
    </view>
    <view class="box_container">
      <van-row>

        <van-col span="24">
          <navigator url="userpublish">
            <van-icon name="card" color='#ff5d6d' /><text>我的发布</text>
          </navigator>
        </van-col>
        <van-col span="24">
          <navigator url="userreply">
            <van-icon name="smile-comment" color='#1edb9b' /><text>我的评论</text>
          </navigator>
        </van-col>
        <van-col span="24" wx:if="{{ball==200}}">
          <navigator url="userstar">
            <van-icon name="bookmark" color='#ff8447' /><text>我的收藏</text>
          </navigator>
        </van-col>
      </van-row>
    </view>
  </view>
</view>