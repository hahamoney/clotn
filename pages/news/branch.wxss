}
.navcell{
  font-weight: 600;
}
.navcell2{
  font-weight: 600;
  margin-top:10rpx;
}
.navbar{
  padding: 30rpx 0;
}
.navbar .bartitle{
  margin-top: 10rpx;
  color: #333333;
  font-size: 28rpx;
}
.title{
}
.noticebar{
  margin: 12rpx 0;
}
.van-hairline--bottom{
  padding:0 25rpx;
  line-height: 2.5;
}
.van-hairline--bottom .hairline_1{
  font-size: 30rpx;
  text-align: left;
}
.van-hairline--bottom .hairline_2{
  font-size: 30rpx;
