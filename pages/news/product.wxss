/* pages/news/product.wxss */
page{
  background-color: rgba(241, 241, 241, 0.705);
}
.wbg{
  background-color: #ffffff;
}
.van-row{
  text-align: center;
}
.image_font{
  width: 120rpx;
}
.countcell{
  font-size: 24rpx !important;
}
.countcell view{
  float: left;
  margin: 0 20rpx 0 0;
}
.countcell .van-icon{
  font-size: 30rpx;
}
.news{
  padding: 20rpx 4%;
  margin: 0 0 12rpx 0;
}
.news .messageuser{
}
.news .messagetitle{
  color: #333333;
  font-size: 30rpx;
  line-height: 1.5;
  margin: 5rpx 0;
  text-align: left;
}
.news .messagetitle .van-tag{
  margin: 0 5rpx 0 0;
}
.news .messagetitle .location{
  margin: 10rpx 0 0;
  font-size: 22rpx;
  color: #c2c2c2;
}
.news .messagetitle .location text{
  margin: 0 0 0 6rpx;
}
.news .tel{
  line-height: 2;
  font-size: 26rpx;
}
.news .tel .van-icon{
  top: 8rpx;
  margin-right: 6rpx;
  font-size: 35rpx;
}
.news .content{
  line-height: 1.5;
  font-size: 28rpx;
  color: #444444;
  margin: 10px 0;
  padding: 15px 0;
  text-align: left;
  border-top: 1px solid #d4d2d2;
}
.news .image{
  margin: 10rpx 0;
  text-align: left;
}
.news .image .image_font{
  width: 100%;
}
.news .news_foot{
  font-size: 24rpx;
  color: #c2c2c2;
}
.news .news_foot .date{
  width: 50%;
  float: left;
  text-align: left;
}
.news .news_foot .distance{
  width: 50%;
  float: right;
  text-align: right;
}
.news .news_foot .watchnum{
  width: 50%;
  float: left;
  text-align: left;
}
.news .news_foot .more{
  width: 50%;
  float: right;
  text-align: right;
}