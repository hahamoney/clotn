<van-search
  value="{{ value }}"
  placeholder="请输入搜索关键词"
  show-action
  bind:search="onSearch"
  bind:cancel="onCancel"
/>
<swiper
  indicator-dots="{{indicatorDots}}"
  autoplay="{{autoplay}}"
  interval="{{interval}}"
  duration="{{duration}}"
>
  <block wx:for="{{imgUrls}}">
    <swiper-item>
      <image src="{{item}}" style="width:100%" class="slide-image"  mode="widthFix" />
    </swiper-item>
  </block>
</swiper>
<van-cell-group>
  <van-cell
    value="总浏览量:123 总量:456"
    custom-class="countcell"
  />

</van-cell-group>

<van-row custom-class="navbar wbg">
  <van-col span="22" offset="1">
    <van-col span="6" bindtap="newsdetail">
      <image src="/image/home4.png" class="image_font"  mode="widthFix" />
      <view class='bartitle'>招聘求职</view>
    </van-col>
    <van-col span="6" bindtap="newsdetail">
      <image src="/image/home3.png" class="image_font"  mode="widthFix" />
      <view class='bartitle'>招租求租</view>
    </van-col>
    <van-col span="6" bindtap="newsdetail">
      <image src="/image/home2.png" class="image_font"  mode="widthFix" />
      <view class='bartitle'>采购找版</view>
    </van-col>
    <van-col span="6" bindtap="newsdetail">
      <image src="/image/home1.png" class="image_font"  mode="widthFix" />
      <view class='bartitle'>产品发布</view>
    </van-col>
  </van-col>
</van-row>

<van-notice-bar
  mode="closeable"
  custom-class="noticebar"
  text="通告栏"
/>
<van-tabs active="0" custom-class="tabswitch" bind:change="onChange">
  <van-tab custom-class="newscard wbg" title="最新消息">
    <view class="news"  bindtap="newsproduct">
      <van-row>
        <van-col span="4" custom-class="messageuser">
          <image src="/image/home1.png" class="image_font"  mode="widthFix" />
        </van-col>
        <van-col span="14" custom-class="messagetitle">
          <view>发布人</view> 
          <view>
            <van-tag >类型</van-tag>
            <van-tag type="primary">类型</van-tag>
          </view>
        </van-col>
        <van-col span="6" custom-class="tel">
          <van-icon name="phone" color='#fce45a'/>拨打电话
        </van-col>

        <van-col span="24" custom-class="content">
          发布正文发布正文发布正文发布正文发布正文发布正文发布正文发布正文发布正文
        </van-col>

        <van-col span="24" custom-class="image">
          <image src="/image/home1.png" class="image_font"  mode="widthFix" />
          <image src="/image/home1.png" class="image_font"  mode="widthFix" />
          <image src="/image/home1.png" class="image_font"  mode="widthFix" />
        </van-col>

        <van-col span="24" custom-class="news_foot">
          <view>
            <view class="date">2019-4-21 10:10发布</view>
            <view class="distance">距离100KM</view>
          </view>
          <view>
            <view class="watchnum">浏览100次</view>
            <view class="more">查看详情<van-icon name="arrow" /></view>
          </view>
        </van-col>
      </van-row>
    </view>
  </van-tab>

  <van-tab title="最新消息" wx:for="{{['1','2']}}">
    <view class="merchant">
    
    </view>
  </van-tab>

</van-tabs>