page{
  background-color: rgba(241, 241, 241, 0.705);
}
.wbg{
  background-color: #ffffff;
}
.van-row{
  text-align: center;
}
.image_font{
  width: 120rpx;
}
.qrcode{
  width: 100%;
  text-align: left;
  color: #333333;
  font-size: 26rpx;
  background-color: #142198;
}
.qrcode .qrbg{
  position: relative;
}
.qrcode .info{
  width: 55%;
  position: absolute;
  z-index: 999;
  left: 35px;
  top: 202px;
}
.qrcode .info .info1{
  font-weight: 600;
  font-size: 28rpx;
  position: relative;
  left:6px;
}
.qrcode .info .info1 image{
  width: 16px;
  position: relative;
  top: 3px;
}
.qrcode .info .info2{
  color:#616166;
  position: relative;
  top: 13px;
  left: 25px;
}
.qrcode .info .info3{
  color:#616166;
  position: relative;
  top: 22px;
  left: 25px;
}
.qrcode .avatar{
  width: 120rpx;
  position: absolute;
  z-index: 999;
  right: 50px;
  top: 150px;
}
.qrcode .qrimg{
  width: 50%;
  position: absolute;
  z-index: 999;
  left: 85px;
  top:320px;
}
.phoneball{
  border-radius: 40px;
  padding: 12px;
  font-size: 26rpx;
  background-color: #ff976a;
  color: #ffffff;
  position: fixed;
  top: 40%;
  right: 2%;
}
.news{
  padding: 20rpx 4%;
  margin: 0 0 12rpx 0;
}
.news .header{
  padding: 10px 0;
  border-bottom: 1px solid #e6e6e6;
}
.news .messageuser{
}
.news .messagetitle{
  color: #333333;
  font-size: 30rpx;
  line-height: 2;
  margin: 5rpx 0 10rpx;
  text-align: left;
}
.news .content{
  line-height: 1.5;
  font-size: 30rpx;
  color: #444444;
  padding: 10px 0;
  text-align: left;
  border-bottom: 1px solid #e6e6e6;
}
.news .content .location{
  width: 85%;
  float: left;
  font-size: 26rpx;
  line-height: 1.5;
  color: #555555;
  overflow: hidden;
}
.news .content .location .van-icon{
  font-size: 32rpx;
  top: 5rpx;
  margin: 0 10rpx 0 0;
}
.news .content .phone{
  font-size: 30rpx;
  line-height: 1.5;
  color: #f56161;
  text-align: right;
}
.news .content .phone .van-icon{
  font-size: 32rpx;
  top: 5rpx;
  margin: 0 10rpx 0 0;
}
.news .content .range{
  text-align: left;
  font-size: 26rpx;
  line-height: 1.5;
  color: #555555;
  overflow: hidden;
}
.news .image{
  margin: 10rpx 0;
  text-align: left;
}
.news .image .image_font{
  width: 100%;
}
.news3title{
  font-size: 28rpx;
  font-weight: 600;
  color: #333333;
  margin: 25rpx 0 10rpx 25rpx;
}
.news3{
  font-size: 28rpx;
  text-align: left;
  color:#616166;
  line-height: 2;
  margin: 0 0 60px 0;
}
.news3 .title{
  padding: 10px 0;
}
.news3 .title .commentt{
  color: #ff976a;
  text-align: right;
}
.news3 .title .van-icon{
  top: 8rpx;
  font-size: 35rpx;
  margin: 0 5rpx 0 0;
}
.news3 .applybtn{
  margin: 20px 0 10px;
  width: 100%;
}
.comment{
  width: 80%;
}
.comment .commentbox{
  background-color: rgba(241, 241, 241, 0.705);
}
.comment .commentbox .title{
  background-color: rgba(241, 241, 241, 0.705);
}
.comment .commentbox .subbtn{
  margin: 5px 0 0 0;
  width: 50%;
  float: left;
  font-size: 26rpx;
}
.comment .commentbox .contentbox .van-field__input{
  height: 150px;
}
