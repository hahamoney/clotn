<van-row custom-class="navbar wbg">
  <van-col span="22" offset="1">
    <van-col span="6" bindtap="newsdetail">
      <image src="/image/home4.png" class="image_font"  mode="widthFix" />
      <view class='bartitle'>招聘求职</view>
    </van-col>
    <van-col span="6" bindtap="newsdetail">
      <image src="/image/home3.png" class="image_font"  mode="widthFix" />
      <view class='bartitle'>招租求租</view>
    </van-col>
    <van-col span="6" bindtap="newsdetail">
      <image src="/image/home2.png" class="image_font"  mode="widthFix" />
      <view class='bartitle'>采购找版</view>
    </van-col>
    <van-col span="6" bindtap="newsdetail">
      <image src="/image/home1.png" class="image_font"  mode="widthFix" />
      <view class='bartitle'>产品发布</view>
    </van-col>
  </van-col>
</van-row>


<van-notice-bar
  mode="closeable"
  custom-class="noticebar"
  text="通告栏"
/>


<view class="van-hairline--bottom wbg">
  <van-row>
    <van-col span="12" custom-class="hairline_1">
      <van-icon name="diamond" color='#ffd013' />品质商家
    </van-col>
    <van-col span="12" custom-class="hairline_2" bindtap="postmerchant">
      申请入驻<van-icon name="arrow" />
    </van-col>
  </van-row>
</view>

  <scroll-view scroll-x="true" class="scollmerchant wbg">
    <view class='hot_merchant' wx:for="{{hotmerchant}}" bindtap="merchantdetail" data-id="{{item.id}}">
      <image src="/image/home1.png" class="image_font"  mode="widthFix" />
      <view>{{item.name}}</view>
    </view>
  </scroll-view>

<van-tabs active="0" custom-class="tabswitch" bind:change="onChange">
  <van-tab custom-class="newscard" title="热门商家">
      <view class="news wbg"  wx:for="{{merchant_list}}">
      <van-row>
        <van-col span="5" custom-class="messageuser" >
          <image src="/image/home1.png" class="image_font"  mode="widthFix" />
        </van-col>
        <van-col span="12" custom-class="messagetitle" bindtap="merchantdetail" data-id="{{item.id}}">
          <view>
            <!-- <van-tag type="danger">置顶</van-tag> -->
            {{item.name}}
          </view> 
          <view class="location">
            <van-icon name="location" color="#f5641a" /><text>{{item.merchant_city}}</text>
          </view> 
        </van-col>
        <van-col span="7" custom-class="tel" bindtap='phone' data-phone='{{item.phone}}'>
          <van-icon name="phone" color='#fce45a' />拨打电话
        </van-col>
        <van-col span="19">
          <view>
            <view class="rate"><van-rate value="5" size="10" readonly /></view>
            <view class="distance">km</view>
          </view>
        </van-col>
      </van-row>
    </view>
  </van-tab>

  <van-tab custom-class="newscard" title="品质车队">
   
   <view class="news wbg"  wx:for="{{car}}">
      <van-row>
        <van-col span="5" custom-class="messageuser">
          <image src="/image/home1.png" class="image_font"  mode="widthFix" />
        </van-col>
        <van-col span="12" custom-class="messagetitle" bindtap="cardetail" data-id="{{item.id}}">
          <view>
            {{item.name}}
          </view> 
          <view class="location">
            <van-icon name="location" color="#f5641a" /><text>{{item.address}}</text>
          </view> 
        </van-col>
        <van-col span="7" custom-class="tel" bindtap='phone' data-phone='{{item.phone}}'>
          <van-icon name="phone" color='#fce45a' />拨打电话
        </van-col>
        <van-col span="19">
          <view>
            <view class="rate"><van-rate value="5" size="10" readonly /></view>
            <view class="distance">km</view>
          </view>
        </van-col>
      </van-row>
    </view>

  </van-tab>

</van-tabs>